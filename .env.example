# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=123456

# 服务器配置
PORT=3006
NODE_ENV=development
TRUST_PROXY=true
TRUST_PROXY_HOPS=1
CLIENT_IP_PLACEHOLDER=0.0.0.0
VIEW_DEDUPE_WINDOW_MINUTES=30
VIEW_SET_VISITOR_COOKIE=true
VIEW_COUNT_BOTS=false

# 阿里云OSS配置
OSS_REGION=oss-cn-shenzhen
OSS_ACCESS_KEY_ID=your_actual_access_key_id
OSS_ACCESS_KEY_SECRET=your_actual_access_key_secret
OSS_BUCKET=your_bucket_name
OSS_ENDPOINT=https://oss-cn-shenzhen.aliyuncs.com
OSS_CUSTOM_DOMAIN=your_custom_domain

# 智谱 AI 配置
ZHIPU_API_KEY=your_key

# 每日提问限制（每个 IP）
CHAT_DAILY_LIMIT=100

# 每日全局提问限制（所有 IP 总共）
CHAT_GLOBAL_DAILY_LIMIT=1000
